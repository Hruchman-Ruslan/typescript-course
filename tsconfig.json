{
	"compilerOptions": {
		/* Modules */
		"module": "commonjs", // Use CommonJS module standard for generating JavaScript.
		"rootDir": "./src", // Specifies the root directory of the source files.
		"outDir": "./dist", // Specifies the directory for the generated output files.
		"removeComments": true, // Remove comments from the generated code.
		"noEmitOnError": true, // Prevents output of compiled files if any errors are found.

		"esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules.

		/* Type Checking */
		"strict": true, // Enables all strict type-checking options.
		"skipLibCheck": true // Skip type checking of declaration files (.d.ts).
	},
	"exclude": ["node_modules"] // Excludes the node_modules folder from the compilation.
	// "include": ["app.ts, analytics.ts"] // Optionally specify files or folders to include.
}
